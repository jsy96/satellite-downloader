{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "VERCEL_PYTHON_VERSION": "3.11"
  },
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60
    }
  }
}
